<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 text-coffee fw-bold mb-0">
            <i class="bi bi-shop me-2"></i>Tipos Medicamentos
        </h1>

        <div class="input-group" style="max-width: 50%;">

            <span class="input-group-text bg-white rounded-start p-2">
                <i class="fas fa-search"></i>
            </span>

            <input id="txtNombreTipoMedicamento" onkeyup="FiltrarTipoMedicamento()" type="text" class="form-control form-control-sm shadow-sm rounded-end" placeholder="Ingresar tipo medicamento a buscar">
        </div>

        <button type="button" class="btn btn-coffee" data-bs-toggle="modal" onclick="MostrarModal()">
            <i class="bi bi-plus-circle-fill me-2"></i>Nuevo Tipo Medicamento
        </button>
    </div>

    <div class="modal fade" id="modalTipoMedicamento" tabindex="-1" aria-labelledby="modalTipoMedicamentoLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header bg-coffee text-white">
                    <h5 class="modal-title fs-5" id="modalTipoMedicamentolLabel">
                        <i class="bi bi-building-gear me-2"></i>Gestionar Tipo Medicamento
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body p-4">
                    <form id="frmTipoMedicamento" method="post" class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-coffee"
                                       id="idTipoMedicamento" name="idTipoMedicamento" readonly>
                                <label for="idTipoMedicamento" class="text-muted">ID TipoMedicamento</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-coffee"
                                       id="nombre" name="nombre" required>
                                <label for="nombre" class="text-muted">Nombre</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" class="form-control border-coffee"
                                       id="descripcion" name="descripcion" required>
                                <label for="descripcion" class="text-muted">Descripcion</label>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer border-top">
                    <button type="button" class="btn btn-outline-coffee" onclick="LimpiarTipoMedicamento()">
                        <i class="bi bi-eraser me-2"></i>Limpiar
                    </button>
                    <button type="button" class="btn btn-coffee" onclick="GuardarTipoMedicamento()">
                        <i class="bi bi-save me-2"></i>Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow">
        <div class="card-header bg-coffee text-white py-3">
            <h5 class="card-title mb-0">
                <i class="bi bi-list-task me-2"></i>Registro de Tipo Medicamento
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <div id="divContenedorTabla" class="rounded-3"></div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/generic.js"></script>
<script src="~/js/tipomedicamento.js"></script>