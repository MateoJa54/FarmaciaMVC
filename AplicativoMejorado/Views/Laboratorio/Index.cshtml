@{
    ViewData["Title"] = "Laboratorios";
}
<link href="~/css/modal.css" rel="stylesheet" />

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 text-coffee fw-bold mb-0">
            <i class="fa fa-flask me-2"></i>Laboratorios
        </h1>
        <button type="button" class="btn btn-coffee btn-lg" data-bs-toggle="modal" onclick="MostrarModal()">
            <i class="bi bi-cup-hot-fill me-2"></i>Nuevo Laboratorio
        </button>
    </div>
    <div class="modal fade" id="modalLaboratorio" tabindex="-1" aria-labelledby="modalLaboratorioLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header border-bottom">
                    <h5 class="modal-title fs-5 text-coffee">
                        <i class="bi bi-building me-2"></i>Gestionar Laboratorio
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>

                <div class="modal-body p-4">
                    <form id="frmLaboratorio" method="post" class="row g-4">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-coffee" id="idLaboratorio"
                                       name="idLaboratorio" readonly>
                                <label for="idLaboratorio" class="text-muted">ID Laboratorio</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-coffee" id="nombre"
                                       name="nombre" required>
                                <label for="nombre" class="text-muted">Nombre</label>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" class="form-control border-coffee" id="direccion"
                                       name="direccion" required>
                                <label for="direccion" class="text-muted">Dirección</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-coffee" id="personaContacto"
                                       name="personaContacto">
                                <label for="personaContacto" class="text-muted">Persona de Contacto</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-coffee" id="numeroContacto"
                                       name="numeroContacto">
                                <label for="numeroContacto" class="text-muted">Número de Contacto</label>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="modal-footer border-top">
                    <button type="button" class="btn btn-outline-coffee" onclick="LimpiarLaboratorio()">
                        <i class="bi bi-eraser me-2"></i>Limpiar
                    </button>
                    <button type="button" class="btn btn-coffee" onclick="GuardarLaboratorio()">
                        <i class="bi bi-save me-2"></i>Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="card border-0 shadow">
        <div class="card-header bg-coffee text-white py-3">
            <h5 class="card-title mb-0">
                <i class="bi bi-list-check me-2"></i>Registro de Laboratorios
            </h5>
        </div>
        <div class="card-body p-0 bg-light-coffee">
            <div class="table-responsive">
                <div id="divContenedorTabla" class="rounded-3"></div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/generic.js"></script>
<script src="~/js/laboratorio.js"></script>