<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 text-coffee fw-bold mb-0">
            <i class="bi bi-capsule me-2"></i>Medicamentos
        </h1>
        <button type="button" class="btn btn-coffee btn-lg" data-bs-toggle="modal" onclick="MostrarModal()">
            <i class="bi bi-plus-circle-fill me-2"></i>Nuevo Medicamento
        </button>
    </div>

    <div class="modal fade" id="modalMedicamento" tabindex="-1" aria-labelledby="modalMedicamentoLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header border-bottom">
                    <h5 class="modal-title fs-5 text-coffee">
                        <i class="bi bi-capsule me-2"></i>Gestionar Medicamento
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>

                <div class="modal-body p-4">
                    <form id="frmMedicamento" method="post" class="row g-4">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-coffee"
                                       id="idMedicamento" name="idMedicamento" readonly>
                                <label for="idMedicamento" class="text-muted">ID Medicamento</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-coffee"
                                       id="codigo" name="codigo" required>
                                <label for="codigo" class="text-muted">Código</label>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" class="form-control border-coffee"
                                       id="nombreMedicamento" name="nombreMedicamento" required>
                                <label for="nombreMedicamento" class="text-muted">Nombre Medicamento</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <select class="form-control border-coffee"
                                        id="tipoMedicamento" name="idTipoMedicamento">
                                    <option value="">Seleccione</option>
                                </select>
                                <label for="tipoMedicamento" class="text-muted">Tipo Medicamento</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <select class="form-control border-coffee"
                                        id="laboratorio" name="idLaboratorio">
                                    <option value="">Seleccione</option>
                                </select>
                                <label for="laboratorio" class="text-muted">Laboratorio</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-coffee"
                                       id="usoMedicamento" name="usoMedicamento">
                                <label for="usoMedicamento" class="text-muted">Uso Medicamento</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-coffee"
                                       id="contenido" name="contenido">
                                <label for="contenido" class="text-muted">Contenido</label>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="modal-footer border-top">
                    <button type="button" class="btn btn-outline-coffee" onclick="LimpiarMedicamento()">
                        <i class="bi bi-eraser me-2"></i>Limpiar
                    </button>
                    <button type="button" class="btn btn-coffee" onclick="GuardarMedicamento()">
                        <i class="bi bi-save me-2"></i>Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow">
        <div class="card-header bg-coffee text-white py-3">
            <h5 class="card-title mb-0">
                <i class="bi bi-list-task me-2"></i>Registro de Medicamentos
            </h5>
        </div>
        <div class="card-body p-0 bg-light-coffee">
            <div class="table-responsive">
                <div id="divContenedorTabla" class="rounded-3"></div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/generic.js"></script>
<script src="~/js/medicamento.js"></script>